@page "/"
@using MovieHub.Contracts.Requests
@using MovieHub.Contracts.Responses
@using WebApp.Services
@inject MovieService MovieService
@rendermode InteractiveServer

<PageTitle>Home</PageTitle>

<h1>Hello, world!</h1>

Welcome to your new app.

<button class="btn btn-primary" @onclick="RefreshPage">Refresh Movies</button>

@if (_movies == null)
{
    <p>
        <em>Loading...</em>
    </p>
}
else
{
    <table class="table">
        <thead>
        <tr>
            <th>Id</th>
            <th>Title</th>
            <th>Slug</th>
            <th>Rating</th>
            <th>User Rating</th>
            <th>Year Of Release</th>
            <th>Genres</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var movie in _movies.Items)
        {
            <tr>
                <td>@movie.Id</td>
                <td>@movie.Title</td>
                <td>@movie.Slug</td>
                <td>@movie.Rating</td>
                <td>@movie.UserRating</td>
                <td>@movie.YearOfRelease</td>
                <td>@string.Join(", ", movie.Genres)</td>
            </tr>
        }
        </tbody>
    </table>
}

@code {
    private MoviesResponse? _movies;
    private int _page = 1;
    private string? _title;
    private int? _year;
    private string? _sortBy;

    protected override async Task OnInitializedAsync()
    {
        await FetchMovies();
    }

    private async Task FetchMovies()
    {
        var request = new GetAllMoviesRequest
        {
            Page = _page,
            Title = _title,
            Year = _year,
            SortBy = _sortBy
        };
        _movies = await MovieService.GetMovies(request);
    }

    private async Task RefreshPage()
    {
        _page++;
        _movies = null;
        await FetchMovies();
    }
}